<h1 class="text-center my-4">Seu Carrinho</h1>
<ul class="list-group">
    <% @cart.each do |product| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= product.name %></span>
          <%= button_to "Remover", remove_item_cart_path(item: product.id), method: :delete, class: "btn btn-danger btn-sm" %>
        </li>
    <% end %>
</ul>
<%= button_to "Pagar", pay_cart_path, method: :post, class: "btn btn-success mt-3" %>
