<h1 class="text-center my-4">Seu Carrinho</h1>
<ul class="list-group">
    <% @cart.each do |product| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="col-1">
            <img src="<%= product.image %>" class="card-img-top img-fluid" alt="<%= product.name %>">
          </div>
          <div class="col-6">
            <h5><%= product.name %></h5>
            <p><%= product.description %></p>
            <p>Pre√ßo: R$ <%= product.price %></p>
          </div>
          <div class="col-3 d-inline-flex justify-content-between align-items-center">
            <div class="d-inline-flex align-items-center">
              <%= button_to remove_item_cart_path(item: product.id), method: :delete, class: "btn btn-warning btn-sm mx-1" do %>
                <i class="bi bi-dash"></i>
              <% end %>
              <span class="mx-2"><%= session[:cart][product.id.to_s] %></span>
              <%= button_to add_item_cart_path(item: product.id), method: :post, class: "btn btn-success btn-sm mx-1" do %>
                <i class="bi bi-plus"></i>
              <% end %>
            </div>
            <%= button_to delete_item_cart_path(item: product.id), method: :delete, class: "btn btn-danger btn-sm ms-auto" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
        </li>
    <% end %>
</ul>
<div class="row my-5">
<span>Total: R$ <%= @total %></span>
<%= link_to pay_cart_path, class: "btn btn-success mt-3" do %>
  <i class="bi bi-credit-card"></i> Pagar
<% end %>
</div>
