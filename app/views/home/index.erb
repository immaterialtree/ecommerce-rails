<h1 class="text-center my-4">Bem vindo ao ecommerce!</h1>

<h2 class="text-center my-4">Products</h2>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
        <div class="card-body">
            <h5 class="card-title"><%= link_to product.name, product_path(product) %></h5>
            <%= button_to 'Adicionar ao carrinho', add_item_cart_path(item: product.id), method: :post, class: "btn btn-primary" %>
          <p class="card-text"><%= number_to_currency(product.price) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
