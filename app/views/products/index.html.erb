<p class="text-success"><%= notice %></p>

<% content_for :title, "Produtos" %>

<h1 class="mb-5">Produtos</h1>
<%= link_to "Novo produto", new_product_path, class: "btn btn-success mb-3" %>

<div id="products" class="row">
  <% @products.each do |product| %>
    <div class="col-md-3 mb-4">
      <div class="card">
        <%= render product %>
        <div class="card-footer">
          <%= link_to "Mostrar este produto", product, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

